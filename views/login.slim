section#login-wrapper
  #login-form
    - if flash[:new_user]
      .new-user-message
       div
        i.fa.fa-beer.fa-2x 
       div = flash[:new_user]
    form action="/auth/login" method="POST" 
      fieldset
        label.required Username:
        input.required name="user[username]" type="text" placeholder="username *"
        br
        label.required Passwort:
        input.required name="user[password]" type="password" placeholder="passwort *"
      input.button.full.highlight.reversed type="submit" value=("Einloggen")